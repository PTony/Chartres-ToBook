{% extends 'TobookBundle::base.html.twig' %}

{% block body %}
    <h1>Professionnel list</h1>

    <table>
        <thead>
            <tr>
                <th>Profid</th>
                <th>Profactif</th>
                <th>Profcode</th>
                <th>Profetoiles</th>
                <th>Profformejuri</th>
                <th>Profnom</th>
                <th>Profadd1</th>
                <th>Profadd2</th>
                <th>Profadd3</th>
                <th>Profcp</th>
                <th>Profville</th>
                <th>Proftel</th>
